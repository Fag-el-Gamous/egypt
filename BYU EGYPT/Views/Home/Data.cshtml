@{
    ViewData["Title"] = "";
    @model List<BYU_EGYPT.Models.Burial>
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Your Page Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FagElGamous.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Additional styles here -->
    <style>
        .search-container {
            text-align: center;
            margin: auto; /* Center the search bar */
        }

            .search-container input[type="text"] {
                padding: 8px; /* Reduced padding to make it shorter */
                font-size: 16px; /* Slightly smaller font size */
                border: 1px solid #ccc; /* Adds a slight border */
                width: 50%; /* Adjust based on preference */
                background: #f1f1f1; /* Light grey background */
            }

            .search-container button {
                width: 10%; /* Matches the input field width */
                padding: 8px; /* Reduced padding to make it shorter */
                background: gray; /* Changed from navy to gray */
                color: white;
                font-size: 16px; /* Slightly smaller font size */
                border: none;
                cursor: pointer;
            }

                .search-container button:hover {
                    background: darkgray; /* Slightly darker gray on hover */
                }

            /* Clear floats */
            .search-container::after {
                content: "";
                clear: both;
                display: table;
            }

        /* Side Menu Styles */
        .side-menu {
            width: 250px; /* Adjust the width as needed */
            border-right: 1px solid #ccc;
        }

        .side-menu-header {
            padding: 16px;
            font-size: 24px;
            background-color: #f8f9fa;
            border-bottom: 1px solid #ccc;
        }

        .side-menu .list-group-item {
            border: none;
            border-bottom: 1px solid #ccc;
        }

            .side-menu .list-group-item:last-child {
                border-bottom: none;
            }

        .side-menu .list-group-item-action {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
        }

            .side-menu .list-group-item-action:hover {
                background-color: #e9ecef;
            }

        .dropdown-content {
            display: none;
            margin-left: 20px; /* Indent the dropdown content for visual hierarchy */
        }
        /* Add this CSS to your stylesheet */
        .hoverable-table tbody tr:hover {
            background-color: #f5f5f5; /* Or any color you prefer */
        }


        .hoverable-table tbody tr:hover {
            background-color: #f5f5f5; /* Or any color you prefer */
        }
    </style>
  

</head>
<body>

    <!-- Side Menu -->
    <div class="side-menu float-start">
        <div id="sidebar">
            <ul>
                <li><a href="#" class="load-partial" data-url="@Url.Action("LoadTable", "Home", new { tableName = "BurialTable" })">Burials</a></li>
                <li><a href="#" class="load-partial" data-url="@Url.Action("LoadTable", "Home", new { tableName = "ArtifactTable" })">Artifacts</a></li>
                <li><a href="#" class="load-partial" data-url="@Url.Action("LoadTable", "Home", new { tableName = "C14Table" })">C14</a></li>

            </ul>
        </div>

            <!-- Add more options if needed -->
        <!-- Other menu items -->
        <a href="#" class="list-group-item list-group-item-action fs-4 py-3" data-bs-toggle="modal" data-bs-target="#artifactsModal"
           onclick="toggleDropdown('artifacts-dropdown')">
            Artifacts <span>&gt;</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action fs-4 py-3" data-bs-toggle="modal" data-bs-target="#burialsModal"
           onclick="toggleDropdown('burials-dropdown')">
            Burials <span>&gt;</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action fs-4 py-3" data-bs-toggle="modal" data-bs-target="#textilesModal"
           onclick="toggleDropdown('textiles-dropdown')">
            Textiles <span>&gt;</span>
        </a>
    </div>
    <!-- Artifacts Modal -->
    <div class="modal fade" id="artifactsModal" tabindex="-1" aria-labelledby="artifactsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="artifactsModalLabel">Artifact Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Artifact Form Elements -->
                    <form id="artifactsForm">
                        <div class="mb-3">
                            <label for="artifactEra" class="form-label">Artifact Era</label>
                            <select class="form-select" id="artifactEra">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="storageLocation" class="form-label">Storage Location</label>
                            <select class="form-select" id="storageLocation">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="condition" class="form-label">Condition</label>
                            <select class="form-select" id="condition">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="provenance" class="form-label">Provenance</label>
                            <select class="form-select" id="provenance">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="foundOnSurface">
                            <label class="form-check-label" for="foundOnSurface">Found on Surface</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="photos">
                            <label class="form-check-label" for="photos">Photos</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="submit" class="btn btn-secondary">Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Burials Modal -->
    <div class="modal fade" id="burialsModal" tabindex="-1" aria-labelledby="burialsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="burialsModalLabel">Burials Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <!-- Burials Form Elements -->
                    <form id="burialsForm">
                        <div class="mb-3">
                            <label for="Head Direction" class="form-label">Head Direction</label>
                            <select class="form-select" id="Head Direction">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Wrapping" class="form-label">Wrapping</label>
                            <select class="form-select" id="Wrapping">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Hair Color" class="form-label">Hair Color</label>
                            <select class="form-select" id="Hair Color">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Age At Death" class="form-label">Age At Death</label>
                            <select class="form-select" id="Age At Death">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Sex" class="form-label">Sex</label>
                            <select class="form-select" id="Sex">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="north">
                            <label class="form-check-label" for="north">North</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="south">
                            <label class="form-check-label" for="south">South</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="east">
                            <label class="form-check-label" for="east">East</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="west">
                            <label class="form-check-label" for="west">West</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="Has Artifacts">
                            <label class="form-check-label" for="Has Artifacts">Has Artifacts</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="Has Textiles">
                            <label class="form-check-label" for="Has Textiles">Has Textiles</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="Has Crenial Data">
                            <label class="form-check-label" for="Has Crenial Data">Has Crenial Data</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="Has Photos">
                            <label class="form-check-label" for="Has Photos">Has Photos</label>
                        </div>
                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="submit" class="btn btn-secondary">Back</button>
                    </form>
                </div>

            </div>
        </div>
    </div>

    <!-- Textiles Modal -->
    <div class="modal fade" id="textilesModal" tabindex="-1" aria-labelledby="textilesModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="textilesModalLabel">Textiles Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Textiles Form Elements -->
                    <form id="textilesForm">
                        <div class="mb-3">
                            <label for="Color" class="form-label">Color</label>
                            <select class="form-select" id="Color">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Function" class="form-label">Function</label>
                            <select class="form-select" id="Function">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Dimension Type" class="form-label">Dimension Type</label>
                            <select class="form-select" id="Dimension Type">
                                <!-- Option elements here -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="Textile Decoration" class="form-label">Textile Decoration</label>
                            <select class="form-select" id="Textile Decoration">
                                <!-- Option elements here -->
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Search</button>
                        <button type="submit" class="btn btn-secondary">Back</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Original Content and Search Bar -->
    <div class="text-center">
        <br />
        <div class="search-container">
            <input type="text" placeholder="Search..." name="search">
            <button type="submit">Search</button>

            <div id="dynamic-table">
                @*dynamic table loads here*@
            </div>
        </div>

    </div>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $(".load-partial").click(function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                $.get(url, function (data) {
                    $("#dynamic-table").html(data);
                });
            });
        });
    </script>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>

  

    <script>function toggleDropdown(dropdownId) {
            var dropdown = document.getElementById(dropdownId);
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }</script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



</body>
</html>