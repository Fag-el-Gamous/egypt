@{
    ViewData["Title"] = "";
    @*@model List<BYU_EGYPT.Models.Burial>*@
    @model IQueryable<BYU_EGYPT.Models.Burial>

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FagElGamous.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <style>

        .hoverable-table tbody tr:hover {
            background-color: #daecf7;
        }

        tr:nth-child(even) {
            background-color: #BDD6E6;
        }

        .container {
            padding: 0;
        }

        .side-menu {
            position: absolute;
            left: 50px;
            top: 200px;
            height: 200px;
            width: 250px;
            color: #000000;
            padding-top: 20px;
            padding-left: 10px;
            font-size: 24px;
            font-weight: 400;
        }

        .menu-item {
            padding: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .menu-item:hover {
                background-color: #BDD6E6;
            }

        .content {
            margin-left: 275px;
            padding: 20px;
        }



        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
        }

            .dropdown-content a {
                display: block;
                padding: 8px 16px;
                color: black;
                text-decoration: none;
            }

        .dropdown-content:hover {
            background-color: #BDD6E6;
        }



        .pagination {
            display: inline-block;
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
            }

                .pagination a.active {
                    background-color: #4CAF50;
                    color: white;
                    border-radius: 5px;
                }

                .pagination a:hover:not(.active) {
                    background-color: #0072CE;
                    border-radius: 5px;
                    color: white;
                }


        .arrow {
            border: solid black;
            border-width: 0 3px 3px 0;
            display: inline-block;
            padding: 3px;
            margin-left: 125px;
        }

        .down {
            transform: rotate(45deg);
            -webkit-transform: rotate(45deg);
        }

    </style>

</head>
<body>
    <!-- Side Menu -->

    <div class="side-menu">
        <hr />
        <div class="menu-item">

            <div class="dropdown" id="dropdownContainer">
                <a href="#" onclick="toggleDropdown(); return false;" style="color: black; text-decoration: none;">
                    Burials <i class="arrow down"></i>
                </a>

                <div id="dropdownContent" class="dropdown-content">
                    <a href="#" onclick="window.location.href='@Url.Action("C14Table", "Home")'; return false;" style="color: black; text-decoration: none;">
                        C14
                    </a>
                    <a href="#" onclick="window.location.href='@Url.Action("OsteologyTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                        Osteology
                    </a>
                    <a href="#" onclick="window.location.href='@Url.Action("CraniaTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                        Crania
                    </a>
                </div>

            </div>
        </div>

        <div class="menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("ArtifactTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Artifacts
            </a>
        </div>

        <div class="menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("TextileTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Textiles
            </a>
        </div>

    </div>



    <!-- Original Content and Search Bar -->
    <div class="content">
        <div class="text-center">
            <br />
            <div class="container">
                <h2>Burial Table</h2>
                <br />
                <table id="burialTable" class="table table-bordered hoverable-table">
                    <thead>
                        <tr>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Excavation Year</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Location</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Burial Number</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Depth</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Age Group</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Sex</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Body Preservation Level</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Wrapping Level</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Has Face Bundle</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Hair Color</td>
                            <td style="font-weight: bold; background-color: #BDD6E6; ">Head Direction</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick="window.location.href='@Url.Action("BurialDetails", "Home", new { BurialNumberID = item.BurialNumber })';" style="cursor:pointer">
                                <td>@item.ExcavationYear</td>
                                <td>@item.Location</td>
                                <td>@item.BurialNumber</td>
                                <td>@item.Depth</td>
                                <td>@item.AgeGroup</td>
                                <td>@item.Sex</td>
                                <td>@item.BodyPreservationLevel</td>
                                <td>@item.WrappingLevel</td>
                                <td>@item.HasFaceBundle</td>
                                <td>@item.HairColor</td>
                                <td>@item.HeadDirection</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="pagination">
                    <a asp-action="BurialTableData" asp-route-pageNum="1">1</a>
                    <a asp-action="BurialTableData" asp-route-pageNum="2">2</a>
                    <a asp-action="BurialTableData" asp-route-pageNum="3">3</a>
                </div>

            </div>
    </div>


    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>

    <script>function toggleDropdown(dropdownId) {
            var dropdown = document.getElementById(dropdownId);
            dropdown.style.display = dropdown.style.display === "block" ? "none" : "block";
        }</script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>



    <script>function toggleDropdown() {
            var dropdownContent = document.getElementById('dropdownContent');
            var dropdownContainer = document.getElementById('dropdownContainer');

            if (dropdownContent.style.display === 'block') {
                dropdownContent.style.display = 'none';
                dropdownContainer.style.height = 'auto'; // Reset the height to auto when the dropdown is closed
            } else {
                dropdownContent.style.display = 'block';
                dropdownContainer.style.height = dropdownContent.offsetHeight + 'px'; // Set the height to match the dropdown content
            }
        }</script>


</body>
</html>
