    <div class="content">
        <br />
        <div class="text-center">
            <h2>Burial Table</h2>
        </div>

            <div class="filter-header" id="filtersHeader">
                <a href="#" onclick="toggleDropdown('filtersHeader', 'filters'); return false;" style="color: black; text-decoration: none;">
                    <h5 style="display: inline-block; margin-right: 1em;">Filter By</h5>
                    <i class="arrowdown"></i>
                </a>
            </div><hr />
            <div class="text-center">
                <div class="container" id="filters" style="display: none">
                    <div class="row">
                        <div class="col-2">
                            <br />
                            <select id="excavationYearFilter" style="width: 150px;">
                                <option value="" disabled selected>Excavation Year</option>
                                @{
                                    var distinctExcavationYearList = Model.Select(b => b.ExcavationYear).Distinct().OrderBy(b => b);
                                    foreach (var year in distinctExcavationYearList)
                                    {
                                        <option value="@year">@year</option>
                                    }
                                }
                            </select>
                        </div>

                        <div class="col-2">
                            <br />
                            <select id="locationFilter" style="width: 150px;">
                                <option value="" disabled selected>Location</option>
                                @{
                                    var distinctLocationList = Model.Select(b => b.Location).Distinct().OrderBy(b => b);
                                    foreach (var location in distinctLocationList)
                                    {
                                        <option value="@location">@location</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="burialNumberFilter" style="width: 150px;">
                                <option value="" disabled selected>Burial Number</option>
                                @{
                                    var distinctBurialNumberList = Model.Select(b => b.BurialNumber).Distinct().OrderBy(b => b);
                                    foreach (var burial in Model)
                                    {
                                        <option value="@burial.BurialNumber">@burial.BurialNumber</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="ageGroupFilter" style="width: 150px;">
                                <option value="" disabled selected>Age Group</option>
                                @{
                                    var distinctAgeGroupList = Model.Where(b => b.AgeGroup != null).Select(b => b.AgeGroup).Distinct().OrderBy(b => b);
                                    foreach (var ageGroup in distinctAgeGroupList)
                                    {
                                        <option value="@ageGroup">@ageGroup</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="sexFilter" style="width: 150px;">
                                <option value="" disabled selected>Sex</option>
                                @{
                                    var distinctSexList = Model.Where(b => b.Sex != null).Select(b => b.Sex).Distinct().OrderBy(b => b);
                                    foreach (var sex in distinctSexList)
                                    {
                                        <option value="@sex">@sex</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="depthFilter" style="width: 150px;">
                                <option value="" disabled selected>Depth</option>
                                @{
                                    var distinctIntegers = Model.Select(b => b.Depth.HasValue ? (int)b.Depth.Value : 0).Distinct().OrderBy(b => b);
                                    foreach (var integer in distinctIntegers)
                                    {
                                        <option value="@integer">@integer</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <br />
                            <select id="hasBodyAnalysisFilter" style="width: 150px;">
                                <option value="" disabled selected>Has Body Analysis</option>
                                @{
                                    var distinctHasBodyAnalysisList = Model.Where(b => b.HasBodyAnalysisInfo != null).Select(b => b.HasBodyAnalysisInfo).Distinct().OrderBy(b => b);
                                    foreach (var hasBodyAnalysis in distinctHasBodyAnalysisList)
                                    {
                                        <option value="@hasBodyAnalysis">@hasBodyAnalysis</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="hasTextileInfoFilter" style="width: 150px;">
                                <option value="" disabled selected>Has Textile Info</option>
                                @{
                                    var distinctHasTextileInfoList = Model.Where(b => b.HasTextileInfo != null).Select(b => b.HasTextileInfo).Distinct().OrderBy(b => b);
                                    foreach (var hasTextileInfo in distinctHasTextileInfoList)
                                    {
                                        <option value="@hasTextileInfo">@hasTextileInfo</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="hasArtifactInfoFilter" style="width: 150px;">
                                <option value="" disabled selected>Has Artifact Info</option>
                                @{
                                    var distinctHasArtifactInfoList = Model.Where(b => b.HasArtifactInfo != null).Select(b => b.HasArtifactInfo).Distinct().OrderBy(b => b);
                                    foreach (var hasArtifactInfo in distinctHasArtifactInfoList)
                                    {
                                        <option value="@hasArtifactInfo">@hasArtifactInfo</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="hasArtifactPhotoFilter" style="width: 150px;">
                                <option value="" disabled selected>Has Artifact Photo</option>
                                @{
                                    var distinctHasArtifactPhotoList = Model.Where(b => b.HasArtifactPhoto != null).Select(b => b.HasArtifactPhoto).Distinct().OrderBy(b => b);
                                    foreach (var hasArtifactPhoto in distinctHasArtifactPhotoList)
                                    {
                                        <option value="@hasArtifactPhoto">@hasArtifactPhoto</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="hairColorFilter" style="width: 150px;">
                                <option value="" disabled selected>Hair Color</option>
                                @{
                                    var distincthairColorList = Model.Where(b => b.HairColor != null).Select(b => b.HairColor).Distinct().OrderBy(b => b);
                                    foreach (var hairColor in distincthairColorList)
                                    {
                                        <option value="@hairColor">@hairColor</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="col-2">
                            <br />
                            <select id="headDirectionFilter" style="width: 150px;">
                                <option value="" disabled selected>Head Direction</option>
                                @{
                                    var distinctHeadDirectionList = Model.Where(b => b.HeadDirection != null).Select(b => b.HeadDirection).Distinct().OrderBy(b => b);
                                    foreach (var headDirection in distinctHeadDirectionList)
                                    {
                                        <option value="@headDirection">@headDirection</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div>
                        <br />
                        <button class="button" onclick="filterTable()">Search</button>
                        <button class="button-clear" onclick="clearFilters()">Clear</button>
                    </div>
                </div>


                <!-- Table -->
                <div class="container scrollable-table-container">
                    <br />
                    <table id="burialTable" class="table table-bordered hoverable-table">
                        <thead>
                            <tr>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Excavation Year</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Location</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Burial Number</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Has Body Analysis</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Has Textile Info</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Has Artifact Info</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Has Artifact Photo</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Depth(m)</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Age Group</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Sex</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Hair Color</td>
                                <td style="font-weight: bold; background-color: #f2f2f2; ">Head Direction</td>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr onclick="window.location.href='@Url.Action("BurialDetails", "Home", new { BurialNumberID = item.BurialNumber })'; clearFilters();" style="cursor:pointer">
                                    <td>@item.ExcavationYear</td>
                                    <td>@item.Location</td>
                                    <td>@item.BurialNumber</td>
                                    <td>@item.HasBodyAnalysisInfo</td>
                                    <td>@item.HasTextileInfo</td>
                                    <td>@item.HasArtifactInfo</td>
                                    <td>@item.HasArtifactPhoto</td>
                                    <td>@item.Depth</td>
                                    <td>@item.AgeGroup</td>
                                    <td>@item.Sex</td>
                                    <td>@item.HairColor</td>
                                    <td>@item.HeadDirection</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <p id="noResultsMessage" style="display: none"><b>No Results</b></p>
                </div>

                <div class="pagination">
                    <a href="#" id="page1" onclick="paginate(1)" class="active">1</a>
                    <a href="#" id="page2" onclick="paginate(2)">2</a>
                    <a href="#" id="page3" onclick="paginate(3)">3</a>
                </div>
            </div>
        </div>

        <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

        <script src="/_framework/aspnetcore-browser-refresh.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
