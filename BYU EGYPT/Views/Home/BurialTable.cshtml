@{
    ViewData["Title"] = "Burials";
    @model IQueryable<BYU_EGYPT.Models.ViewModel.burialViewModel>

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FagElGamous.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <style>

        .scrollable-table-container {
            width: 100%;
            overflow-x: auto;
        }

        .hoverable-table tbody tr:hover {
            background-color: #daecf7;
        }

        tr:nth-child(even) {
            background-color: #BDD6E6;
        }

        .container {
            padding: 0;
        }

        .side-menu {
            position: absolute;
            left: 50px;
            top: 200px;
            height: 200px;
            width: 250px;
            color: #000000;
            padding-top: 20px;
            padding-left: 10px;
            font-size: 24px;
            font-weight: 400;
        }

        .menu-item {
            padding: 10px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .menu-item:hover {
            background-color: #BDD6E6;
        }

        .indented-menu-item {
            padding: 3px 10px 3px 20px;
            font-size: 16px;
        }

        .indented-menu-item a:hover {
            font-weight: bold;
        }

        .indented-menu-item-crania {
            padding: 3px 10px 10px 20px;
            font-size: 16px;
        }

        .indented-menu-item-crania a:hover {
            font-weight: bold;
        }

        .burial-item {
            padding: 10px;
            transition: background-color 0.3s;
        }

        .short-hr {
            width: calc(100% - 45px);
            margin-left: 20px;
        }

        .content {
            margin-left: 275px;
            padding: 20px;
        }

        .pagination {
            display: inline-block;
        }

        .pagination a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
        }

        .pagination a.active {
            background-color: #0072CE;
            color: white;
            border-radius: 5px;
        }

        .pagination a:hover:not(.active) {
            background-color: #BDD6E6;
            border-radius: 5px;
            color: black;
        }

        th:nth-child(2),
        td:nth-child(2) {
            width: 125px; 
        }

        .filter-header {
            background-color: #f1f1f1;
            padding: 10px;
        }

        .filter-body {
            padding: 10px;
        }

        .filter-group {
            margin-bottom: 10px;
        }

        .filter-group-header {
            background-color: #f1f1f1;
            padding: 10px;
        }

        .filter-group-body {
            padding: 10px;
        }

        .filter-list {
            column-count: 3;
            column-gap: 10px;
            display: flex;
            flex-wrap: wrap;
        }

        .filter-list-item {
            display: inline-block;
            margin-right: 1px;
            width: 150px;
        }

        .filter-footer {
            background-color: #f1f1f1;
            padding: 10px;
        }

        .btn {
            padding: 10px;
            margin-right: 10px;
        }
    </style>
</head>

<body>

    <!-- Side Menu -->
    <div class="side-menu">
        <hr />

        <div class="burial-item" style="color: black; text-decoration: none;">
            Burials
        </div>

        <div class="menu-item indented-menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("BurialTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Burial Data
            </a>
        </div><hr class="short-hr" />

        <div class="menu-item indented-menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("C14Table", "Home")'; return false;" style="color: black; text-decoration: none;">
                Carbon Dating Data
            </a>
        </div><hr class="short-hr" />

        <div class="menu-item  indented-menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("OsteologyTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Osteology Data
            </a>
        </div><hr class="short-hr" />

        <div class="menu-item  indented-menu-item-crania">
            <a href="#" onclick="window.location.href='@Url.Action("CraniaTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Crania Data
            </a>
        </div>

        <div class="menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("ArtifactTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Artifacts
            </a>
        </div>

        <div class="menu-item">
            <a href="#" onclick="window.location.href='@Url.Action("TextileTable", "Home")'; return false;" style="color: black; text-decoration: none;">
                Textiles
            </a>
        </div>

    </div>

    <div class="content">
        <div class="text-center">
            <br />
            <h2>Burial Table</h2>
            <div class="filter-header" id="filtersHeader">
                <a href="#" onclick="toggleDropdown('filtersHeader', 'filters'); return false;" style="color: black; text-decoration: none;">
                    Filters <i class="arrow down"></i>
                </a>
            </div>

            <div class="container" id="filters" style="display: none">
                <div class="row">
                    <div class="col-2">
                        <p><strong>Excavation Year</strong></p>
                        <select id="excavationYearFilter">
                            <option></option>
                            @{
                                var distinctExcavationYearList = Model.Select(b => b.ExcavationYear).Distinct().OrderBy(b => b);
                                foreach (var year in distinctExcavationYearList)
                                    {
                                        <option value="@year">@year</option>
                                    }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Location</strong></p>
                        <select id="locationFilter">
                            <option></option>
                            @{
                                var distinctLocationList = Model.Select(b => b.Location).Distinct().OrderBy(b => b);
                                foreach (var location in distinctLocationList)
                                    {
                                        <option value="@location">@location</option>
                                    }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Burial Number</strong></p>
                        <select id="burialNumberFilter">
                            <option></option>
                            @{
                                var distinctBurialNumberList = Model.Select(b => b.BurialNumber).Distinct().OrderBy(b => b);
                                foreach (var burial in Model)
                                {
                                    <option value="@burial.BurialNumber">@burial.BurialNumber</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Has Body Analysis</strong></p>
                        <select id="hasBodyAnalysisFilter">
                            <option></option>
                            @{
                                var distinctHasBodyAnalysisList = Model.Where(b => b.HasBodyAnalysisInfo != null).Select(b => b.HasBodyAnalysisInfo).Distinct().OrderBy(b => b);
                                foreach (var hasBodyAnalysis in distinctHasBodyAnalysisList)
                                {
                                    <option value="@hasBodyAnalysis">@hasBodyAnalysis</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Has Textile Info</strong></p>
                        <select id="hasTextileInfoFilter">
                            <option></option>
                            @{
                                var distinctHasTextileInfoList = Model.Where(b => b.HasTextileInfo != null).Select(b => b.HasTextileInfo).Distinct().OrderBy(b => b);
                                foreach (var hasTextileInfo in distinctHasTextileInfoList)
                                {
                                    <option value="@hasTextileInfo">@hasTextileInfo</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Has Artifact Info</strong></p>
                        <select id="hasArtifactInfoFilter">
                            <option></option>
                            @{
                                var distinctHasArtifactInfoList = Model.Where(b => b.HasArtifactInfo != null).Select(b => b.HasArtifactInfo).Distinct().OrderBy(b => b);
                                foreach (var hasArtifactInfo in distinctHasArtifactInfoList)
                                {
                                    <option value="@hasArtifactInfo">@hasArtifactInfo</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        <p><strong>Has Artifact Photo</strong></p>
                        <select id="hasArtifactPhotoFilter">
                            <option></option>
                            @{
                                var distinctHasArtifactPhotoList = Model.Where(b => b.HasArtifactPhoto != null).Select(b => b.HasArtifactPhoto).Distinct().OrderBy(b => b);
                                foreach (var hasArtifactPhoto in distinctHasArtifactPhotoList)
                                {
                                    <option value="@hasArtifactPhoto">@hasArtifactPhoto</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Depth</strong></p>
                        <select id="depthFilter">
                            <option></option>
                            @{
                                var distinctIntegers = Model.Select(b => b.Depth.HasValue ? (int)b.Depth.Value : 0).Distinct().OrderBy(b => b);
                                foreach (var integer in distinctIntegers)
                                {
                                    <option value="@integer">@integer</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Age Group</strong></p>
                        <select id="ageGroupFilter">
                            <option></option>
                            @{
                                var distinctAgeGroupList = Model.Where(b => b.AgeGroup != null).Select(b => b.AgeGroup).Distinct().OrderBy(b => b);
                                foreach (var ageGroup in distinctAgeGroupList)
                                {
                                    <option value="@ageGroup">@ageGroup</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Sex</strong></p>
                        <select id="sexFilter">
                            <option></option>
                            @{
                                var distinctSexList = Model.Where(b => b.Sex != null).Select(b => b.Sex).Distinct().OrderBy(b => b);
                                foreach (var sex in distinctSexList)
                                {
                                    <option value="@sex">@sex</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Hair Color</strong></p>
                        <select id="hairColorFilter">
                            <option></option>
                            @{
                                var distincthairColorList = Model.Where(b => b.HairColor != null).Select(b => b.HairColor).Distinct().OrderBy(b => b);
                                foreach (var hairColor in distincthairColorList)
                                {
                                    <option value="@hairColor">@hairColor</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-2">
                        <p><strong>Head Direction</strong></p>
                        <select id="headDirectionFilter">
                            <option></option>
                            @{
                                var distinctHeadDirectionList = Model.Where(b => b.HeadDirection != null).Select(b => b.HeadDirection).Distinct().OrderBy(b => b);
                                foreach (var headDirection in distinctHeadDirectionList)
                                {
                                    <option value="@headDirection">@headDirection</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div>
                    <br />
                    <button onclick="filterTable()">GO!</button>
                    <button onclick="clearFilters()">Clear Filters</button>
                </div>
            </div>
        

            <!-- Table -->
            <div class="container scrollable-table-container">
                <br />
                <table id="burialTable" class="table table-bordered hoverable-table">
                    <thead>
                        <tr>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Excavation Year</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Location</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Burial Number</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Has Body Analysis</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Has Textile Info</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Has Artifact Info</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Has Artifact Photo</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Depth(m)</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Age Group</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Sex</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Hair Color</td>
                            <td style="font-weight: bold; background-color: #f2f2f2; ">Head Direction</td>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr onclick="window.location.href='@Url.Action("BurialDetails", "Home", new { BurialNumberID = item.BurialNumber })'; clearFilters();" style="cursor:pointer">
                                <td>@item.ExcavationYear</td>
                                <td>@item.Location</td>
                                <td>@item.BurialNumber</td>
                                <td>@item.HasBodyAnalysisInfo</td>
                                <td>@item.HasTextileInfo</td>
                                <td>@item.HasArtifactInfo</td>
                                <td>@item.HasArtifactPhoto</td>
                                <td>@item.Depth</td>
                                <td>@item.AgeGroup</td>
                                <td>@item.Sex</td>
                                <td>@item.HairColor</td>
                                <td>@item.HeadDirection</td>
                            </tr>
                        }
                    </tbody>
                </table>
                        <p id="noResultsMessage" style="display: none"><b>No Results</b></p>
            </div>

            <div class="pagination">
                <a href="#" id="page1" onclick="paginate(1)">1</a>
                <a href="#" id="page2" onclick="paginate(2)">2</a>
                <a href="#" id="page3" onclick="paginate(3)">3</a>
            </div>

        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>

    <script src="/_framework/aspnetcore-browser-refresh.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <script>function removeAllHighlights() {
            // Remove the 'highlight' class from all elements
            var elements = document.querySelectorAll('.highlight');
            elements.forEach(function (element) {
                element.classList.remove('highlight');
            });
        }</script>

    <script>function highlightItem(element) {
            // Add the 'highlight' class to the hovered element
            element.classList.add('highlight');
        }</script>

    <script>
        function toggleDropdown(dropdownId, dropdownContentId) {
            removeAllHighlights();

            var dropdown = document.getElementById(dropdownId);
            var dropdownContent = document.getElementById(dropdownContentId);

            if (dropdownContent.style.display == 'none') {
                dropdownContent.style.display = 'block';
                //dropdown.style.marginBottom = dropdownContent.offsetHeight + "px";
            } else {
                dropdownContent.style.display = 'none';
                dropdown.style.marginBottom = "0";
            }
        }
    </script>

    <script>function handleItemHover(element) {
            removeAllHighlights();
            highlightItem(element);
        }
    </script>

<script>
    function paginate(pageNum) {
        if (filtersActive) { return; }

        var pageSize = 12;
        var startIndex = (pageNum - 1) * pageSize;
        var tableRows = document.getElementById("burialTable").getElementsByTagName("tbody")[0].getElementsByTagName("tr");
        var visibleRows = Array.from(tableRows).filter(row => row.style.display !== "none");

        // Hide all table rows
        for (var i = 0; i < tableRows.length; i++) {
            tableRows[i].style.display = "none";
        }

        // Show table rows for the current page
        for (var i = startIndex; i < Math.min(startIndex + pageSize, tableRows.length); i++) {
            tableRows[i].style.display = "";
        }
    }
        window.onload = function () {
            filtersActive = false;
            paginate(1);
        };
</script>

    <script>
        function filterTable() {
            var excavationYearFilter = document.getElementById("excavationYearFilter").value;
            var locationFilter = document.getElementById("locationFilter").value;
            var burialNumberFilter = document.getElementById("burialNumberFilter").value;
            var hasBodyAnalysisFilter = document.getElementById("hasBodyAnalysisFilter").value;
            var hasTextileInfoFilter = document.getElementById("hasTextileInfoFilter").value;
            var hasArtifactInfoFilter = document.getElementById("hasArtifactInfoFilter").value;
            var hasArtifactPhotoFilter = document.getElementById("hasArtifactPhotoFilter").value;
            var depthFilter = document.getElementById("depthFilter").value;
            var ageGroupFilter = document.getElementById("ageGroupFilter").value;
            var sexFilter = document.getElementById("sexFilter").value;
            var hairColorFilter = document.getElementById("hairColorFilter").value;
            var headDirectionFilter = document.getElementById("headDirectionFilter").value;
            var visibleRows = 0
            var noResultsMessage = document.getElementById("noResultsMessage");
            var tableRows = document.getElementById("burialTable").getElementsByTagName("tbody")[0].getElementsByTagName("tr");
            var filtersActive = false;

            if (excavationYearFilter === '' &&
                locationFilter === '' &&
                burialNumberFilter === '' &&
                hasBodyAnalysisFilter === '' &&
                hasTextileInfoFilter === '' &&
                hasArtifactInfoFilter === '' &&
                hasArtifactPhotoFilter === '' &&
                depthFilter === '' &&
                ageGroupFilter === '' &&
                sexFilter === '' &&
                hairColorFilter === '' &&
                headDirectionFilter === '') {
                return; // Exit early if all filters are empty
            }

            for (var i = 0; i < tableRows.length; i++) {
                var row = tableRows[i];
                var cells = row.getElementsByTagName("td");
                var excavationYear = cells[0].innerText;
                var location = cells[1].innerText;
                var burialNumber = cells[2].innerText;
                var hasBodyAnalysis = cells[3].innerText;
                var hasTextileInfo = cells[4].innerText;
                var hasArtifactInfo = cells[5].innerText;
                var hasArtifactPhoto = cells[6].innerText;
                var depth = cells[7].innerText;
                var ageGroup = cells[8].innerText;
                var sex = cells[9].innerText;
                var hairColor = cells[10].innerText;
                var headDirection = cells[11].innerText;

                var showRow = true;

                if (excavationYearFilter !== '' && excavationYear !== excavationYearFilter) {
                    showRow = false;
                }
                if (locationFilter !== '' && location !== locationFilter) {
                    showRow = false;
                }
                if (burialNumberFilter !== '' && burialNumber !== burialNumberFilter) {
                    showRow = false;
                }
                if (hasBodyAnalysisFilter !== '' && hasBodyAnalysis !== hasBodyAnalysisFilter) {
                    showRow = false;
                }
                if (hasTextileInfoFilter !== '' && hasTextileInfo !== hasTextileInfoFilter) {
                    showRow = false;
                }
                if (hasArtifactInfoFilter !== '' && hasArtifactInfo !== hasArtifactInfoFilter) {
                    showRow = false;
                }
                if (hasArtifactPhotoFilter !== '' && hasArtifactPhoto !== hasArtifactPhotoFilter) {
                    showRow = false;
                }
                if (depthFilter !== '' && Math.floor(depth) !== Math.floor(depthFilter)) {
                    showRow = false;
                }
                if (ageGroupFilter !== '' && ageGroup !== ageGroupFilter) {
                    showRow = false;
                }
                if (sexFilter !== '' && sex !== sexFilter) {
                    showRow = false;
                }
                if (hairColorFilter !== '' && hairColor !== hairColorFilter) {
                    showRow = false;
                }
                if (headDirectionFilter !== '' && headDirection !== headDirectionFilter) {
                    showRow = false;
                }

                if (showRow) {
                    row.style.display = "";
                    visibleRows++;
                } else {
                    row.style.display = "none";
                }
            }

            if (visibleRows == 0) {
                noResultsMessage.style.display = "";
            } else {
                noResultsMessage.style.display = "none";
            }

            var page1 = document.getElementById("page1");
            var page2 = document.getElementById("page2");
            var page3 = document.getElementById("page3");
            filtersActive = true;

            if (filtersActive) {
                page1.style.display = "none";
                page2.style.display = "none";
                page3.style.display = "none";
            }
        }

        function clearFilters() {
            document.getElementById("excavationYearFilter").value = '';
            document.getElementById("locationFilter").value = '';
            document.getElementById("burialNumberFilter").value = '';
            document.getElementById("hasBodyAnalysisFilter").value = '';
            document.getElementById("hasTextileInfoFilter").value = '';
            document.getElementById("hasArtifactInfoFilter").value = '';
            document.getElementById("hasArtifactPhotoFilter").value = '';
            document.getElementById("depthFilter").value = '';
            document.getElementById("ageGroupFilter").value = '';
            document.getElementById("sexFilter").value = '';
            document.getElementById("hairColorFilter").value = '';
            document.getElementById("headDirectionFilter").value = '';

            filterTable();
            filtersActive = false;
            page1.style.display = "";
            page2.style.display = "";
            page3.style.display = "";
            paginate(1);
        }
    </script>

</body>
</html>